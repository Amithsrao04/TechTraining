#include<iostream>
#inclcude<ctype.h>
using namespace std;
int miss(string str)
{
int i, count=0;
for(i=0;i<=strlen(str);i++)
{
char ch = str\[i];
if(!(isspace(str\[i]))
{ if(!(isdigit(str\[i]))
{ if(!(isalpha(str\[i]))
{ count++;
}}}
return count;
}
int main()
{
string input, result;
cout<<"Enter the string"<<endl;
cin>>input;
result = miss(input);
cout<<"Number of misses = "<<result;
return 0;
}

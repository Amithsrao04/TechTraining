#include <iostream>
#include<stdlib.h> 
using namespace std;

char* withoutsplchars(char *s, int len) 
{
char *res = (char*)malloc(len + 1);
int j = 0;
for (int i = 0; i < len; i++) {
if ((s[i] >= 'A' && s[i] <= 'Z') ||
(s[i] >= 'a' && s[i] <= 'z') ||
(s[i] >= '0' && s[i] <= '9') ||
s[i] == ' ') {
res[j++] = s[i];
}
}
res[j] = '\0';
return res;
}
int main() {
int i, n = 0;
char *p = (char *)malloc(1000 * sizeof(char)); 
cout << "Enter the string: ";
cin >> p;
for (i = 0; p[i] != '\0'; i++) 
{
n++;
}
p = (char *)realloc(p, n * sizeof(char));
char *q = withoutsplchars(p, n);
cout << "String without special characters: " << q;
free(p);
free(q);
return 0;
}
